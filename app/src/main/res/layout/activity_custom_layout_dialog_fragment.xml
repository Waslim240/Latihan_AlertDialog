<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/teal_200"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tugas.CustomLayoutDialogFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/struk_pembayaran"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/masukan_barang1"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/custom"
        android:paddingStart="15dp"
        android:layout_height="40dp"
        android:hint="@string/masukan_barang"
        tools:ignore="Autofill,RtlSymmetry,TextFields" />

    <EditText
        android:id="@+id/masukan_jumlah1"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/custom"
        android:paddingStart="15dp"
        android:layout_height="40dp"
        android:hint="@string/masukan_jumlah"
        tools:ignore="Autofill,RtlSymmetry,TextFields" />

    <EditText
        android:id="@+id/masukan_harga1"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/custom"
        android:paddingStart="15dp"
        android:layout_height="40dp"
        android:hint="@string/masukan_harga_barang"
        tools:ignore="Autofill,RtlSymmetry,TextFields" />

    <Button
        android:id="@+id/prosesnya1"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hitung" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/hasil1"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>